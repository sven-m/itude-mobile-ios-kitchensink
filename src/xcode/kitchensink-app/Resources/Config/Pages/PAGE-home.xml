<Configuration>
    <View>
        <Page name="PAGE-home" document="MBEmptyDoc" title="MOBBL Examples">
            <Panel type="LIST">
                <Panel type="SECTION" title="Navigation examples">
                    <Panel type="ROW" outcome="OUTCOME-empty-screen">
                        <Field type="LABEL" label="Page navigation via row"/>
                    </Panel>
                    <Panel type="ROW" outcome="OUTCOME-empty-screen">
                        <Field type="LABEL" label="Page navigation via row" />
                        <Field type="SUBLABEL" label="with nested button"/>
                        <Field type="BUTTON" label="Device info" style="NETWORK" name="button" outcome="OUTCOME-retrieve-device-info"/>
                    </Panel>
                    <Panel type="ROW">
                        <Field type="LABEL" label="Deprecated page navigation"/>
                        <Field type="SUBLABEL" label="Only works with deprecated rowviewbuilder"/>
